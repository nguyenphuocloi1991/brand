<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="auth">
    <select id="auth_login">
        SELECT
        *
        FROM pl_user
        WHERE pl_user.user_name = #{user_name}
    </select>
</mapper>